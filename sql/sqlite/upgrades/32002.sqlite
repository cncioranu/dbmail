
BEGIN;
DROP VIEW IF EXISTS {PREFIX}subjectfield;
CREATE VIEW {PREFIX}subjectfield AS
   SELECT physmessage_id, headervalue AS subjectfield, sortfield
   FROM {PREFIX}messages m
   JOIN {PREFIX}header h USING (physmessage_id)
   JOIN {PREFIX}headername n ON h.headername_id = n.id
   JOIN {PREFIX}headervalue v ON h.headervalue_id = v.id
WHERE n.headername = 'subject';

INSERT INTO {PREFIX}upgrade_steps (from_version, to_version) values (32001, 32002);
COMMIT;

